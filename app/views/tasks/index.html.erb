<div class="container">
  <h1>My tasks</h1>
  <ol>
    <% @tasks.each do |task| %>
      <li class="h5 ">
        <% if task.completed %>
        <i class="fa-regular fa-square-check"></i>
        <% else %>
        <i class="fa-regular fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %>
      </li>
    <% end %>
  </ol>
  <div>
    <%= link_to tasks_new_path do %>
    <i class="fa-solid fa-plus"></i>
    <% end %>
  </div>
</div>
